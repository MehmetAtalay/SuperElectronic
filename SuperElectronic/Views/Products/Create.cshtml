@model ProductDTO
@{
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SuperElectronic.styles.css" asp-append-version="true" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
        <style >
        body {
            background-image: url('/UrunResimleri/dukkanresmi.jpg');
        }
        tbody {
            opacity: 0.95;
        }
        /*  #tb{
                background-image:url('/UrunResimleri/tableArkaPlan.jpg');
                background-size:cover;
                background-position:center;
                opacity: 1.0;
            } */
   .textDanger{
       color:red;
       font-size:17px;
       background-image :url('/UrunResimleri/backgroundimage1.jpg');
   }
   #lb{
       color:blue;
       font-size:17px;
       font-weight:bold;
   }
   #tablo{
       background-color:aliceblue;
       opacity:0.92;
   }
    </style>
</head>
<div class="row" >
    @* column , center borderi rounded text centerda olsun bottom marginide m-5 olsun paddingide p-3 *@
    <div class="col-md-8 mx-auto rounded border p-3" id="tablo">
        <h2 class="text-center mb-5">Yeni Urun</h2>

        @* enctype multipart/form data kullandim resimde eklencegi icin*@
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3" >
                <label class="col-sm-4 col-form-label" id="lb">Urun Adi</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="textDanger" ></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" id="lb">Marka</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand">
                    <span asp-validation-for="Brand" class="textDanger" ></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" id="lb">Kategori</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Category">
                        <option value='Other'>Digerleri</option>
                        <option value='Phones'>Telefonlar</option>
                        <option value='Computers'>Bilgisayarlar</option>
                        <option value='Accessories'>Aksesuarlar</option>
                        <option value='Printers'>Yazicilar</option>
                        <option value='Cameras'>Cameralar</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" id="lb">Fiyat</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="textDanger" ></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" id="lb">Urun Aciklamasi</label>
                <div class="col-sm-8">
                    <textarea class="form-control"  asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="textDanger" ></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" id="lb">Urunun Resmi</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="textDanger" ></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary"  id="submitBtn">Urun Olustur</button>
                </div>
                <div class="col-sm-4 d-grid">
                    @*Cancel Buttonuna tikladigimizda bizi  direk indexe aticak*@
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">
                        Vazgec
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@*Bu scriptler direk hazir geliyo mvc projesi actigimizda , bu sekilde kullandigimda modele girilen
    verinin dogrulugunu once client tarafinda bir kere kontrol ettikten sonra eger dogru sekilde
    girildeyse servere  yolluyorum. Ordada model tarafinda zaten ayni kontroller yapiliyor.(ve fazlasi)
    Fakat once client tarafinda yapmamin sebebi , confirm form resubmission uyarisi yememek.
    Cunku biz bir sayfayi refresh ettigimizde ornegin f5 ile o sayfadaki post methodu tekrar servera
    bir istek olarak yollanir. Buda istenmeyen requestlere sebeb olabilir.
*@
